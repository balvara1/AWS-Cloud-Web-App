@model _301171014deguzman_301128209alvarado_Lab3.Models.Review;

@{
    ViewData["Title"] = "Update";
}

<h1>Update Review</h1>

<h4>Movie: @ViewBag.MovieTitle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="stars">
                <a>Rating ⭐</a>
                <br />
                @{
                    List<SelectListItem> listItems = new List<SelectListItem>();
                    listItems.Add(new SelectListItem
                    {
                        Text = "1 star",
                        Value = "1",
                        Selected = true
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "2 stars",
                        Value = "2",
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "3 stars",
                        Value = "3"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "4 stars",
                        Value = "4"
                    });
                    listItems.Add(new SelectListItem
                    {
                        Text = "5 stars",
                        Value = "5"
                    });
                }

                @Html.DropDownListFor(model => model.Rating, listItems, "")

                <input asp-for="Rating" type="hidden" />

            </div>
            <br />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                @Html.TextAreaFor(model => model.Comment, 8, 40, null)
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Movies" asp-action="Details" asp-route-movieId="@ViewBag.MovieID" class="btn btn-warning">Back to Movie Details</a>
            </div>
            <div>
                <input name="MovieId" type="hidden" value="@ViewBag.MovieId" />
            </div>
            <div>
                <input name="CommentId" type="hidden" value="@Model.CommentId" />
            </div>

        </form>
    </div>
    <div>

    </div>
</div>
